<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Build Jobs</h3>
      </div>

      <div class="box-body">

        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Url</th>
              <th>Console out</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @build_jobs.each do |build_job| %>
              <tr>
                <td><%= build_job.name %></td>
                <td><%= build_job.url %></td>
                <td><%= build_job.console_out %></td>
                <td><%= build_job.status %></td>
                <td>
                  <%= link_to raw('<i class="fa fa-eye"></i>'), build_job, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_build_job_path(build_job), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-trash"></i>'), build_job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', build_jobs_path, class: 'btn btn-default' %>
        <%= link_to 'New Build Job', new_build_job_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<br>

