<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @step.name %></dd>

              <dt>Description</dt>
              <dd><%= @step.description %></dd>

              <dt>Icon</dt>
              <dd><%= @step.icon %></dd>


        </dl>
      </div>
      <div class="box-footer">
        <%= link_to 'Back', project_stage_steps_path, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_project_stage_step_path(@project, @stage, @step), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

