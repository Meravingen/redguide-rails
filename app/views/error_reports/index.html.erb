<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Error Reports</h3>
      </div>

      <div class="box-body">

        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Stacktrace</th>
              <th>Error msg</th>
              <th>Errors passed</th>
              <th>Changed resources</th>
              <th>Node</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @error_reports.each do |error_report| %>
              <tr>
                <td><%= error_report.stacktrace %></td>
                <td><%= error_report.error_msg %></td>
                <td><%= error_report.error_passed %></td>
                <td><%= error_report.changed_resources %></td>
                <td><%= error_report.node %></td>
                <td>
                  <%= link_to raw('<i class="fa fa-eye"></i>'), organization_environment_node_error_report_path(@organization, @environment, @node, error_report), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_organization_environment_node_error_report_path(@organization, @environment, @node, error_report), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-trash"></i>'), organization_environment_node_error_report_path(@organization, @environment, @node, error_report), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', organization_environment_node_path(@organization, @environment, @node), class: 'btn btn-default' %>
        <%= link_to 'New Error Report', new_organization_environment_node_error_report_path(@organization, @environment, @node), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<br>

