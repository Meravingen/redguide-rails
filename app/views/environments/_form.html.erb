<%= form_for(environment) do |f| %>
  <% if environment.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h4><i class="icon fa fa-ban"></i> <%= pluralize(environment.errors.count, "error") %> prohibited this environment from being saved:</h4>

      <ul>
        <% environment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:action].capitalize %></h3>
      </div>

      <div class="box-body">
            <div class="form-group">
              <%= f.label :name, class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'name'.humanize %>
            </div>

            <div class="form-group">
              <%= f.label :organization_id, class: 'control-label' %>
              <%= f.text_field :organization_id, class: 'form-control', placeholder: 'organization_id'.humanize %>
            </div>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', organization_environments_path, class: 'btn btn-default' %>
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<% end %>
