<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @node.name %></dd>

              <dt>Environment</dt>
              <dd><%= @node.environment %></dd>

              <dt>Status</dt>
              <dd><%= @node.status %></dd>

        </dl>
      </div>
      <div class="box-footer">
        <%= link_to 'Back', nodes_path, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_node_path(@node), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

