<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Projects</h3>
      </div>

      <div class="box-body">

        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>CMT</th>
              <th>Project</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td>
                <% case project.project_type_name %>
                  <% when "SaltStack" %>
                  <div >
                    <%= image_tag("saltstack.png", size: "32") %>
                  </div>
                  <% when "Chef" %>
                  <div >
                    <%= image_tag("chef.png", size: "32") %>
                  </div>
                  <% when "Puppet" %>
                  <div >
                    <%= image_tag("puppet.png", size: "32") %>
                  </div>
                  <% when "Ansible" %>
                  <div >
                    <%= image_tag("ansible.png", size: "32") %>
                  </div>
                <% end %>
                </td>
                <td><%= link_to project.key, project %></td>
                <td><%= project.description %></td>
                <td>
                  <%= link_to raw('<i class="fa fa-eye"></i>'), project, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_project_path(project), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-trash"></i>'), project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', projects_path, class: 'btn btn-default' %>
        <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<br>
