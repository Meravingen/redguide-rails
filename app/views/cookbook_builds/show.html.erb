<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
              <dt>Cookbook</dt>
              <dd><%= @cookbook_build.cookbook_id %></dd>

              <dt>Foodcritic status</dt>
              <dd><%= @cookbook_build.foodcritic_status %></dd>

              <dt>Cookstyle status</dt>
              <dd><%= @cookbook_build.cookstyle_status %></dd>

              <dt>Rspec status</dt>
              <dd><%= @cookbook_build.rspec_status %></dd>

              <dt>Kitchen status</dt>
              <dd><%= @cookbook_build.kitchen_status %></dd>

              <dt>Approve status</dt>
              <dd><%= @cookbook_build.approve_status %></dd>

              <dt>Commit sha</dt>
              <dd><%= @cookbook_build.commit_sha %></dd>

              <dt>Remote branch</dt>
              <dd><%= @cookbook_build.remote_branch %></dd>

              <dt>Build job</dt>
              <dd><%= @cookbook_build.build_job_id %></dd>

        </dl>
      </div>
      <div class="box-footer">
        <%= link_to 'Back', cookbook_builds_path, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_cookbook_build_path(@cookbook_build), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

