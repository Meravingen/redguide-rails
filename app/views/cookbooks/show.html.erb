<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @cookbook.name %></dd>

              <dt>VCS URL</dt>
              <dd><%= @cookbook.vcs_url %></dd>

        </dl>
      </div>
      <div class="box-footer">
        <%= link_to 'Back', project_cookbooks_path, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_project_cookbook_path(@project, @cookbook), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

