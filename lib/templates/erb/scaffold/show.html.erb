<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
              <dt><%= attribute.human_name %></dt>
              <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

<% end -%>
        </dl>
      </div>
      <div class="box-footer">
        <%%= link_to 'Back', <%= index_helper %>_path, class: 'btn btn-default' %>
        <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

